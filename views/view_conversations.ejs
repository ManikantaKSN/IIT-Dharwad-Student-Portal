<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IIT Dharwad Student Portal</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/view_conversations.css">
</head>
<body>
    <a href="/home" style="text-decoration:none;">
        <header>
            <div>
                <img src="/img/logo.png" alt="IIT Dharwad Logo">
                <h1>IIT Dharwad Student Portal</h1>
            </div>
        </header>
    </a>

    <div class="conversation">
        <% if (questions.length > 0) { %>
            <% questions.forEach(question => { %>
                <div class="qa-box question">
                    <strong>Question by <%= question.username %>: <%= question.quest %></strong><br>
                    <% 
                    const answersForQuestion = answers.filter(answer => answer.question_id.toString() === question._id.toString());
                    if (answersForQuestion.length > 0) { 
                    %>
                        <% answersForQuestion.forEach(answer => { %>
                            <div class="qa-box answer">
                                <em>Answer by <%= answer.username %>: <%= answer.answer_text %></em><br>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            <% }); %>
        <% } else { %>
            <h2 class="conv-block">No conversations found.</h2>
        <% } %>
    </div>
</body>
</html>